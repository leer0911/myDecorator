{
  "compilerOptions": {
    "target": "es5",
    "experimentalDecorators": true,
    "inlineSources": true,
    "moduleResolution": "node",
    "module": "commonjs",
    "sourceMap": true,
    "outDir": "dist",
    "strictNullChecks": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "sourceRoot": "./src/**/**.ts",
    "plugins": [
      {
        "name": "tslint-language-service"
      }
    ]
  },
  "exclude": ["node_modules"]
}
